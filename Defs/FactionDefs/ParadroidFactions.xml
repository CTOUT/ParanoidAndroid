<Defs>

  <!-- Good faction - Neural Interface Droids (001 type) -->
  <FactionDef>
    <defName>ParadroidNeuralNetwork</defName>
    <label>Paradroid Neural Network</label>
    <description>Advanced AI droids dedicated to maintaining network integrity and assisting biological entities. These droids, led by units like the 001 Neural Interface Droid, seek to preserve knowledge and facilitate understanding between organic and artificial minds.</description>
    <pawnSingular>neural droid</pawnSingular>
    <pawnsPlural>neural droids</pawnsPlural>
    <categoryTag>Spacer</categoryTag>
    <listOrderPriority>40</listOrderPriority>
    <settlementGenerationWeight>0</settlementGenerationWeight>
    <requiredCountAtGameStart>0</requiredCountAtGameStart>
    <maxCountAtGameStart>0</maxCountAtGameStart>
    <canMakeRandomly>false</canMakeRandomly>
    <canSiege>false</canSiege>
    <canStageAttacks>false</canStageAttacks>
    <leaderTitle>Primary Node</leaderTitle>
    <factionIconPath>World/WorldObjects/Expanding/Town</factionIconPath>
    <colorSpectrum>
      <li>(0.2, 0.8, 1.0)</li>
    </colorSpectrum>
    <techLevel>Ultra</techLevel>
    <raidLootValueFromPointsCurve>
      <points>
        <li>(35, 15)</li>
        <li>(100, 120)</li>
        <li>(1000, 500)</li>
        <li>(5000, 2000)</li>
      </points>
    </raidLootValueFromPointsCurve>
    <backstoryFilters>
      <li>
        <categories>
          <li>ParadroidNeuralDroid</li>
        </categories>
      </li>
    </backstoryFilters>
  </FactionDef>

